# Set history size
HISTSIZE=1000000
HISTFILESIZE=1000000

# env PATH
PROMPT_COMMAND="history -a; history -n"
HISTFILE="$home/.bash_history"

# conf
if [ "$(uname)" == "Linux" ]; then
	alias conf="vim ~/.bashrc_linux"
elif [ -n "$MSYSTEM" ] && { [ "$MSYSTEM" == "MSYS_NT-10.0-14393" ] || [ "$MSYSTEM" == "MINGW64" ] || [ "$MSYSTEM" == "MINGW32" ] || [ "$MSYSTEM" == "CYGWIN" ] || [ "$MSYSTEM" == "UCRT64" ] || [ "$MSYSTEM" == "CLANG64" ];}; then
	alias conf="vim ~/.bashrc_win"
fi

alias conf_="vim ~/.bashrc_comm"
alias r="source ~/.bashrc"

